<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.immaker.valerian.programmingquiz.ResultActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONGRATULATIONS!"
            android:id="@+id/messages"
            android:textSize="25sp"
            android:gravity="center"/>
        <ImageView
            android:layout_below="@id/messages"
            android:id="@+id/image_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/emoji_5"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/name_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:layout_below="@id/image_result"
            android:textSize="30sp"
            android:gravity="center" />
        <TextView
            android:id="@+id/score_result"
            android:layout_below="@id/name_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:text="Score :"/>
    </RelativeLayout>
    <Button
        android:id="@+id/explanation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/buttonColor"
        android:text="Show Explanation"
        android:textColor="@color/buttonTextColor"
        android:layout_marginLeft="-5dip"
        android:layout_marginRight="-5dip"
        android:layout_marginTop="-5dip"
        android:layout_marginBottom="-5dip"/>

</RelativeLayout>
